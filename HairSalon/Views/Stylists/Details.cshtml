@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.Name):</h3>
<h4>@Html.DisplayNameFor(model => model.Specialty) - @Html.DisplayFor(model => model.Specialty)</h4>

<ul>
@if (@Model.Clients.Count == 0)
{
  <h4>no clients found</h4>
}

@foreach (Client client in @Model.Clients)
{
  <li>Client: @client.Name</li>
}
</ul>

<button class="btn btn-warning btn-md" onclick="location.href='@Url.Action("Index")'">Back to Stylists</button>
<br>
<br>
<button class="btn btn-danger btn-md" onclick="location.href='@Url.Action("Delete", new { id = Model.StylistId })'">Delete Stylist</button>