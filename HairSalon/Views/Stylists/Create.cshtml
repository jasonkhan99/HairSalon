@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="well">
  <h2>Add a new Stylist</h2>
  @using (Html.BeginForm())
  {
      @Html.LabelFor(model => model.Name, new { Style = "color:White" })<span></span>
      @Html.TextBoxFor(model => model.Name)<span class="two"></span>
      @Html.LabelFor(model => model.Specialty, new { Style = "color:White" })<span></span>
      @Html.TextBoxFor(model => model.Specialty)<span class="two"></span>
      <input type="submit" value="Add new Stylist" class="btn btn-primary" />
  }
  <br>
  <button class="btn btn-warning btn-md" onclick="location.href='@Url.Action("Index")'">Show all Stylists</button>
</div>